<Window x:Class="WpfExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample"
        mc:Ignorable="d"
        Title="Wpf Example - Main Window" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="Button1"></Button>
        <Button x:Name="Button2"></Button>
        <Button x:Name="Button3" Click="Button3_Click" Height="342" Foreground="#FF38EA14">
            <Button.Background>
                <ImageBrush ImageSource="/Download.jpg"/>
            </Button.Background> Leonardo Depardio</Button>
        <Button x:Name="Button4"></Button>
        <Button x:Name="Button5"></Button>
        <Button x:Name="Button6"></Button>
        <Button x:Name="Button7" Height="246" RenderTransformOrigin="0.5,0.5" Click="Button7_Click" Width="1156">
            <Button.Background>
                <ImageBrush ImageSource="/br-br-patapim.jpg"/>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-60.744"/>
                    <RotateTransform/>
                    <TranslateTransform X="-89.26"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </StackPanel>
</Window>
